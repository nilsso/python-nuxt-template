datasource db {
    provider = "sqlite"
    url      = "file:database.db"
}

model User {
    id   Int    @id @default(autoincrement())
    name String

    posts Post[]
    files File[]
}

model File {
    id     String @id @default(uuid())
    userId Int
    blob   Bytes

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Post {
    id     Int    @id @default(autoincrement())
    userId Int
    title  String

    user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
    tags Tag[]
}

model Tag {
    tag String @id

    posts Post[]
}
